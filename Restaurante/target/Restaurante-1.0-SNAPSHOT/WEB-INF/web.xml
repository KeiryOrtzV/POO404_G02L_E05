<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                              http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- Declaración del servlet LoginServlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.tempertrapp.servlet.LoginServlet</servlet-class>
    </servlet>

    <!-- Mapeo del servlet a una URL -->
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Agrega otros servlets según sea necesario -->
    <!-- Por ejemplo, puedes agregar el servlet MenuClienteServlet aquí -->
    <servlet>
        <servlet-name>MenuClienteServlet</servlet-name>
        <servlet-class>com.tempertrapp.servlet.MenuClienteServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MenuClienteServlet</servlet-name>
        <url-pattern>/menuCliente</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PedidosEmpleadoServlet</servlet-name>
        <servlet-class>com.tempertrapp.servlet.PedidosEmpleadoServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PedidosEmpleadoServlet</servlet-name>
        <url-pattern>/pedidosEmpleado</url-pattern>
    </servlet-mapping>

</web-app>
